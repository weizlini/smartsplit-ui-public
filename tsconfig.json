{
  "compilerOptions": {
  "target": "ES2019",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "module": "ESNext",
    "moduleResolution": "Node",

    "jsx": "react-jsx",

    "strict": false,
    "skipLibCheck": true,

    "noEmit": true,

    "allowJs": true,
    "checkJs": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
},
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["node_modules", "build"]
}
